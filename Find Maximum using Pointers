#include <iostream>
using namespace std;

int findMax(int *x, int *y, int *z) {
    int max = *x;
    if (*y > max) max = *y;
    if (*z > max) max = *z;
    return max;
}

int main() {
    int a, b, c;
    cout << "Enter 3 numbers: ";
    cin >> a >> b >> c;

    int max = findMax(&a, &b, &c);
    cout << "Maximum number is: " << max << endl;

    return 0;
}
